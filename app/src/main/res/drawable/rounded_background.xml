<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Warna background -->
    <solid android:color="@color/hitamtransparant" />

    <!-- Sudut radius -->
    <corners android:radius="24dp" />

    <!-- Optional: shadow outline biar keliatan lebih bagus -->
    <padding android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- Optional: garis pinggir -->
    <stroke
        android:width="1dp"
        android:color="#BBC2FF" />
</shape>
