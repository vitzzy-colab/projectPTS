<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Warna background -->
    <solid android:color="@color/hitamtransparant2" />

    <!-- Stroke (garis pinggir) -->
    <stroke
        android:width="3dp"
        android:color="#BBC2FF" />

    <!-- Sudut membulat -->
    <corners android:radius="16dp" />

    <!-- Padding dalam -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
